<div>
    <h2>Edit movie</h2>
    <br/>
    <form action="/movies/{{movie.id}}/edit" method="POST" enctype="multipart/form-data">
        <label for="title">Title</label>
        <input type="text" name="title" value="{{movie.title}}"/>
        <hr>
        <label for="genre">Genre</label>
        <input type="text" name="genre" value="{{movie.genre}}"/>
        <hr>
        <label for="plot">Plot</label>
        <input type="text" name="plot" value="{{movie.plot}}"/>
        <hr>
        <label for="cast">Cast</label>
        <select name="cast" id="celebrity" multiple value="{{movie.cast}}">
            {{!-- <option value="{{celebrity.name}}">{{each celebrity}}</option> --}}
        </select>
        
        <hr>
        <button type="submit">Submit</button>
    </form>

</div>